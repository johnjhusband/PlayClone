{
  "name": "playclone",
  "version": "0.1.0",
  "description": "AI-native browser automation framework designed for direct control by AI assistants",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:self": "node tests/self-test-master.js",
    "test:ai": "node tests/ai-assistant-tests.ts",
    "test:stress": "node tests/performance/stress-test-suite.js",
    "test:cross-browser": "node tests/cross-browser-compatibility.js",
    "test:cross-browser:quick": "node tests/cross-browser-quick-test.js",
    "test:cross-browser:matrix": "node tests/cross-browser-matrix-test.js",
    "perf:baseline": "node tests/performance/baseline-performance-test.js",
    "perf:regression": "node tests/performance/performance-regression-test.js",
    "perf:stress": "node tests/performance/stress-test-suite.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "demo": "tsx demo.ts",
    "self-test": "tsc examples/playclone-self-test.ts --outDir temp-test --module commonjs --target ES2022 && node temp-test/examples/playclone-self-test.js && rm -rf temp-test",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "browser",
    "automation",
    "ai",
    "playwright",
    "testing",
    "web-scraping",
    "natural-language"
  ],
  "author": "PlayClone Contributors",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/unzipper": "^0.10.11",
    "playwright": "^1.55.0",
    "playwright-core": "^1.48.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnjhusband/PlayClone.git"
  },
  "bugs": {
    "url": "https://github.com/johnjhusband/PlayClone/issues"
  },
  "homepage": "https://github.com/johnjhusband/PlayClone#readme"
}
