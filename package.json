{
  "name": "playclone",
  "version": "0.1.0",
  "description": "AI-native browser automation framework designed for direct control by AI assistants",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "demo": "tsx demo.ts",
    "self-test": "tsx examples/playclone-self-test.ts"
  },
  "keywords": [
    "browser",
    "automation",
    "ai",
    "playwright",
    "testing",
    "web-scraping",
    "natural-language"
  ],
  "author": "PlayClone Contributors",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "playwright": "^1.55.0",
    "playwright-core": "^1.48.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnjhusband/PlayClone.git"
  },
  "bugs": {
    "url": "https://github.com/johnjhusband/PlayClone/issues"
  },
  "homepage": "https://github.com/johnjhusband/PlayClone#readme"
}
